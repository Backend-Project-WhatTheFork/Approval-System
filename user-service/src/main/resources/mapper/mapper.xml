<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whatthefork.userservice.query.mapper.UserMapper">

    <select id="findUserById" resultType="com.whatthefork.userservice.query.dto.UserDTO">
        SELECT
            id
            , dept_id
            , email
            , is_admin
            , is_dept_leader
            , name
            , position_code
            , role
        FROM member
        WHERE id = #{userId}
    </select>

    <select id="findAllUsers" resultType="com.whatthefork.userservice.query.dto.UserDTO">
        SELECT
            id
            , dept_id
            , email
            , is_admin
            , is_dept_leader
            , name
            , position_code
            , role
        FROM member
    </select>

    <select id="findUserByEmail" resultType="com.whatthefork.userservice.query.dto.UserDTO">
        SELECT
            id
            , dept_id
            , email
            , is_admin
            , is_dept_leader
            , name
            , position_code
            , role
        FROM member
        WHERE email = #{email}
    </select>

</mapper>